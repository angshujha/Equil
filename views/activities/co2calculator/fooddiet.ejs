<% pageCSS = ["fooddiet"]; %>
<div class="design-root">
<div class="app-frame">
  <div class="app-body">

    <!-- Header -->
    <header class="app-header">
      <div class="icon-wrapper" onclick="window.history.back()">
        ‚Üê
      </div>
      <h2>Food and Diet</h2>
    </header>

    <!-- Progress Bar -->
    <div class="progress-bar">
      <div class="progress-dot"></div>
      <div class="progress-dot"></div>
      <div class="progress-dot active"></div>
      <div class="progress-dot"></div>
    </div>

    <!-- Card Section -->
    <div class="content-section">
      <div class="card">
        <div class="card-image" style="background-image: url('https://i.postimg.cc/4yGC61Y7/Gemini_Generated_Image_5w9g005w9g005w9g.png');"></div>
        <div class="card-content">
          <h3>Food & Diet</h3>
          <p class="subtitle">
            Tell us about your eating habits to estimate your food-related carbon footprint.
          </p>
        </div>
      </div>
    </div>

    <!-- Form Fields -->
    <div class="form-group">
      <label>
        <p class="label-text">Diet Type</p>
        <select>
          <option value="" disabled selected>Select diet type</option>
          <option value="omnivore">ü•©ü•¶ Omnivore</option>
          <option value="vegetarian">ü•ó Vegetarian</option>
          <option value="vegan">üåø Vegan</option>
        </select>
      </label>
    </div>

    <div class="form-group">
      <label>
        <select>
          <option value="" disabled selected>Meat Consumption Frequency</option>
          <option value="Daily">Daily</option>
          <option value="Weekly">Several times a week</option>
          <option value="Rarely">Rarely</option>
        </select>
      </label>
    </div>

    <div class="form-group">
      <label>
        <p class="label-text">Local Food Percentage</p>
        <div class="slider-group">
          <input type="range" min="0" max="100" value="50" id="localFoodRange">
          <span id="localFoodValue">50%</span>
        </div>
      </label>
    </div>

    <!-- Buttons -->
    <div class="button-container-wrapper">
      <div class="button-container">
        <a href="/calculator/home"><button class="btn btn-secondary">Previous</button></a>
        <a href="/calculator/wasterecycle"><button class="btn btn-primary">Next</button></a>
      </div>
    </div>

  </div>
</div>
</div>

<script>
  const localFoodRange = document.getElementById('localFoodRange');
  const localFoodValue = document.getElementById('localFoodValue');
  const updateSlider = () => {
    const value = localFoodRange.value;
    const percent = ((value - 0) / (100 - 0)) * 100;
    localFoodValue.textContent = value + '%';
    localFoodRange.style.setProperty('--value-percent', `${percent}%`);
  };
  localFoodRange.addEventListener('input', updateSlider);
  document.addEventListener('DOMContentLoaded', updateSlider);
</script>
